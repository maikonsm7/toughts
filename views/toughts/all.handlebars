<div class="title-container">
<h2>Todos os pensamentos</h2>
<form action="/" method="get">
<input type="text" name="search" class="search" placeholder="Pesquisar...">
<input type="submit" class="btn" value="Buscar">
</form>
</div>

{{#if qtdSearch}}
<p class="qtd-search"><span>{{qtdSearch}}</span> resultados</p>
{{/if}}

<div class="toughts">
{{#each toughts}}
<ul>
    <li>
        <p>"{{this.title}}"</p>
        <p class="autor">{{this.User.nome}}</p>
    </li>
</ul>
{{/each}}
{{#if emptyToughts}}
<p class="empty-toughts">Ainda não há pensamentos</p>
{{/if}}
</div>